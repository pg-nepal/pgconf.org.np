<style>
    .event-box div {
        box-sizing: border-box;
        display: flex;
        gap: 2%;
    }

    .event-box {
        transition: transform 0.4s;
        cursor: pointer;
    }

    .event-box:hover {
        transform: translateY(-5px);
    }

    @media (max-width: 400px) {
        .event-box div {
            display: flex;
            flex-direction: column;
        }
    }
</style>

<div class="event-container">
